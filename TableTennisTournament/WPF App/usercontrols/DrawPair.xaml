<UserControl x:Class="TableTennisWPF.usercontrols.DrawPair"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TableTennisWPF.usercontrols"
             mc:Ignorable="d" 
             d:DesignHeight="94" d:DesignWidth="400"
             MaxHeight="94"
             FontSize="16"
             Drop="UserControl_Drop">
    <Grid Margin="5">
        <StackPanel Background="LightSteelBlue">
            <Border Height="30" Margin="20 5 20 5" CornerRadius="15" Background="White">
                <Label Name="lbName1" Margin="20 0" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Border>
            <Border Height="30" Margin="20 5 20 10" CornerRadius="15" Background="White">
                <Label Name="lbName2" Margin="20 0" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Border>

        </StackPanel>
    </Grid>
</UserControl>
