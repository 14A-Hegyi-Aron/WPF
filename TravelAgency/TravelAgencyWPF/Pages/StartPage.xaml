<Page x:Class="TravelAgencyWPF.pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TravelAgencyWPF.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Content="Szállodák adatai" HorizontalAlignment="Center" VerticalAlignment="Center"
               FontSize="36" FontWeight="Bold" Cursor="Hand" MouseLeftButtonUp="Hotels_MouseLeftButtonUp"/>
        <Label Grid.Row="2" Content="Utazások adatai" HorizontalAlignment="Center" VerticalAlignment="Center"
               FontSize="36" FontWeight="Bold" Cursor="Hand" MouseLeftButtonUp="Offers_MouseLeftButtonUp"/>
    </Grid>
</Page>
