<Page x:Class="TravelAgencyWPF.pages.OffersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TravelAgencyWPF.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OffersPage"
      FontSize="16">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition />
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Keresés" Margin="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="Úti cél:" VerticalAlignment="Center" Margin="8 0" />
                <Label Grid.Row="1" Grid.Column="0" Content="Utazási mód:" VerticalAlignment="Center" Margin="8 0" />
                <Label Grid.Row="2" Grid.Column="0" Content="Utazás ára::" VerticalAlignment="Center" Margin="8 0" />
                <TextBox Grid.Row="0" Grid.Column="1" Height="24" Text="asd" VerticalContentAlignment="Center" />
                <ComboBox Name="cboTravelMode" Grid.Row="1" Grid.Column="1" Height="24" VerticalContentAlignment="Center" />
                <StackPanel VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                    <TextBox Height="24" Width="90" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" />
                    <Label Content="-" VerticalAlignment="Center" Margin="8 0" />
                    <TextBox Height="24" Width="90" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" />
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button Content="Keresés" Height="24" Width="90" Margin="8 0" />
                    <Button Content="Törlés" Height="24" Width="90" Margin="8 0" />
                </StackPanel>
            </Grid>
        </GroupBox>
        <DataGrid Grid.Row="1" Name="dgHotels" Margin="8" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <!--destination, travelmode, startdate, enddate, hotelname, price-->
                <DataGridTextColumn Header="Úti cél" Binding="{Binding Destination}" Width="200"/>
                <DataGridTextColumn Header="Utazási mód" Binding="{Binding ModeName}" Width="120"/>
                <DataGridTextColumn Header="Indulás" Binding="{Binding StartDate, StringFormat=yyyy.MM.dd}" Width="100" />
                <DataGridTextColumn Header="Érkezés" Binding="{Binding EndDate, StringFormat=yyyy.MM.dd}" Width="100" />
                <DataGridTextColumn Header="Hotel neve" Binding="{Binding HotelName}" Width="150"/>
                <DataGridTextColumn Header="Ár" Binding="{Binding Price, StringFormat={}{0:N0} Ft}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Új" Height="24" Width="90" Margin="8" Click="Button_Click" />
            <Button Content="Mégse" Height="24" Width="90" Margin="8" />
        </StackPanel>
    </Grid>
</Page>
