<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PingPong.GameOverPage"
             Title="GameOverPage">
    <FlexLayout HorizontalOptions="Center">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" x:Name="winnerNameLbl" Text="Győztes: " FontSize="40" HorizontalTextAlignment="Center" VerticalTextAlignment="End"/>
            <Label Grid.Row="1" x:Name="scoresLbl" Text="0 - 0" FontSize="50" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            <Button Grid.Row="2" Text="Új játék" WidthRequest="200" HeightRequest="50" Clicked="NewGame_Clicked"/>
            <Button Grid.Row="3" Text="Kilépés" WidthRequest="200" HeightRequest="50" VerticalOptions="Start" Clicked="Quit_Clicked"/>
        </Grid>
        
    </FlexLayout>
</ContentPage>